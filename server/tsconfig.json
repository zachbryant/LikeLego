{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "newLine": "lf",
        "baseUrl": "src",
        "paths": {
            "@config/*": ["config/*"],
            "@config/": ["config/"],
            "@config": ["config/index"],
            "@api/*": ["api/*"],
            "@api/": ["api/"],
            "@api": ["api/index"],
            "@decorators/*": ["decorators/*"],
            "@decorators/": ["decorators/"],
            "@decorators": ["decorators/index"],
            "@interfaces/*": ["interfaces/*"],
            "@interfaces/": ["interfaces/"],
            "@interfaces": ["interfaces/index"],
            "@jobs/*": ["jobs/*"],
            "@jobs/": ["jobs/"],
            "@jobs": ["jobs/index"],
            "@loaders/*": ["loaders/*"],
            "@loaders/": ["loaders/"],
            "@loaders": ["loaders/index"],
            "@models/*": ["models/*"],
            "@models/": ["models/"],
            "@models": ["models/index"],
            "@services/*": ["services/*"],
            "@services/": ["services/"],
            "@services": ["services/index"],
            "@subscribers/*": ["subscribers/*"],
            "@subscribers/": ["subscribers/"],
            "@subscribers": ["subscribers/index"],
            "@strings/*": ["strings/*"],
            "@strings/": ["strings/index"],
            "@strings": ["strings/index"],
            "@types/*": ["types/*"],
            "@types/": ["types/"],
            "@types": ["types/index"],
            "@utils/*": ["utils/*"],
            "@utils/": ["utils/"],
            "@utils": ["utils/index"],
            "@/*": ["./*"],
            "~/*": ["../*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": [
        "lib",
        "build",
        "node_modules",
        "scripts",
        "webpack",
        "jest",
        "tests",
        "templates"
    ]
}
