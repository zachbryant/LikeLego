{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "newLine": "lf",
        "baseUrl": "src",
        "paths": {
            "@config/*": ["config/*", "config/index"],
            "@config": ["config/index"],
            "@api/*": ["api/*", "api/index"],
            "@api": ["api/index"],
            "@jobs/*": ["jobs/*", "jobs/index"],
            "@jobs": ["jobs/index"],
            "@loaders/*": ["loaders/*", "loaders/index"],
            "@loaders": ["loaders/index"],
            "@models/*": ["models/*", "models/index"],
            "@models": ["models/index"],
            "@services/*": ["services/*", "services/index"],
            "@services": ["services/index"],
            "@subscribers/*": ["subscribers/*", "subscribers/index"],
            "@subscribers": ["subscribers/index"],
            "@strings/*": ["strings/*", "strings/index"],
            "@strings": ["strings/index"],
            "@types/*": ["types/*", "types/index"],
            "@types": ["types/index"],
            "@utils/*": ["utils/*", "utils/index"],
            "@utils": ["utils/index"],
            "@/*": ["./*"],
            "~/*": ["../*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": ["src"],
    "exclude": [
        "lib",
        "build",
        "node_modules",
        "scripts",
        "webpack",
        "jest",
        "tests",
        "templates"
    ]
}
